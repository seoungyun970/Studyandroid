<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chulsoo"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:text="철수"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/younghee"
        android:text="영희"
        android:layout_toRightOf="@id/chulsoo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mongryoung"
        android:layout_below="@+id/younghee"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:text="몽룡"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chunhyang"
        android:layout_toLeftOf="@+id/mongryoung"
        android:layout_alignBottom="@+id/mongryoung"
        android:textSize="20dp"
        android:text="춘향"/>
</RelativeLayout>